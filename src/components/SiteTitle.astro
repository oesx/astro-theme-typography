---
import { themeConfig } from '@/config/default'

const { site } = themeConfig
---

<div class="flex flex-col">
  <a href="/" class="text-3xl font-bold text-gray-900 dark:text-white">
    {site.title}
  </a>
  {
    site.subtitle && (
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
        {site.subtitle}
      </p>
    )
  }
</div>
