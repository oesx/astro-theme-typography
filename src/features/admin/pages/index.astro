---
import { getSession } from 'auth-astro/server'
import AdminLayout from '../../layouts/AdminLayout.astro'

const session = await getSession(Astro.request)
if (!session) {
  return Astro.redirect('/auth/login')
}
---

<AdminLayout title="管理後台">
  <div class="p-6">
    <h1 class="mb-6 text-2xl font-bold">歡迎回來</h1>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
      <a
        href="/admin/posts"
        class="block rounded-lg bg-white p-6 shadow-sm hover:shadow-md transition-shadow"
      >
        <h2 class="text-xl font-semibold mb-2">文章管理</h2>
        <p class="text-gray-600">創建、編輯和管理您的博客文章</p>
      </a>
      <a
        href="/admin/settings"
        class="block rounded-lg bg-white p-6 shadow-sm hover:shadow-md transition-shadow"
      >
        <h2 class="text-xl font-semibold mb-2">網站設置</h2>
        <p class="text-gray-600">修改網站標題、描述等基本設置</p>
      </a>
      <a
        href="/admin/categories"
        class="block rounded-lg bg-white p-6 shadow-sm hover:shadow-md transition-shadow"
      >
        <h2 class="text-xl font-semibold mb-2">分類管理</h2>
        <p class="text-gray-600">管理文章分類和標籤</p>
      </a>
    </div>
  </div>
</AdminLayout>
